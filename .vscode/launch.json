    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Run FantasyCalc Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli_single_player_trade.py",
            "console": "integratedTerminal",
            "args": ["Tyreek Hill"]  // ðŸ‘ˆ Change this for different tests
        },
        {
            "name": "Run FantasyCalc Dynasty compare",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli_dynasty_compare.py",
            "console": "integratedTerminal",
            "args": [
                "--side-a", "Bijan Robinson", "2025 Round 2",
                "--side-b", "Tyreek Hill", "2025 Round 1"
            ]
        },
        {
        "name": "Run Discord Bot",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/bot.py", // Change to your bot's entry file
        "envFile": "${workspaceFolder}/.env",
        "console": "integratedTerminal"
        },

    ]
}